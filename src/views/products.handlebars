<section class="productsSection" id="productsSection">
  <h2 class="sectionTitle">Productos</h2>
  <div class="productsContainer">
    {{#each products}}
      <div class="productCard">
        <a href="/products/{{this.id}}">
          <img
            class="productCard-img"
            src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRJiT-UHSm6w0Jperb8SitpfoAKeMUE3uynPg5YO-2Drw&s"
            alt="imagen producto"
          /></a>
        <div class="productCard-info">
          <h3 class="productTitle">{{this.title}}</h3>
          <i class="fa-sharp fa-solid fa-star productRating"><span
            >4.6</span></i>
        </div>
        <p class="productCard-category">Categoría</p>
        <p class="productPrice">{{this.price}} €</p>
      </div>
    {{/each}}

  </div>
</section>